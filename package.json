{
  "name": "paopu",
  "version": "0.1.2",
  "description": "",
  "main": "bin/index.js",
  "type": "module",
  "bin": {
    "paopu": "bin/index.js"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "node bin/index.js",
    "eslint:check": "eslint -c .eslintrc.json",
    "prettier:check": "prettier --config .prettierrc.json --check",
    "prettier:write": "prettier --config .prettierrc.json --write",
    "release": "dotenv release-it --"
  },
  "dependencies": {
    "jshashes": "^1.0.8",
    "ora": "^6.3.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@release-it/conventional-changelog": "^5.1.1",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^3.0.0",
    "release-it": "^17.0.0",
    "rotom": "^0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/paopu.git"
  },
  "keywords": [
    "script",
    "bin script",
    "documentation",
    "cdn",
    "sri",
    "sub-resource integrity",
    "html",
    "web development",
    "node",
    "npm"
  ],
  "directories": {
    "bin": "bin"
  },
  "files": [
    "bin/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "George Treviranus <geowtrev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geotrev/paopu/issues"
  },
  "homepage": "https://github.com/geotrev/paopu#readme",
  "lint-staged": {
    "bin/**/*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.json": [
      "npm run prettier:write"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    }
  }
}
